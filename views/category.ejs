<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Use the category attribute to set the tab name -->
    <title><%= category %></title>
    <link href="/style.css" rel="stylesheet" type="text/css">
    
  </head>
  <body>
    <div class="header">
      <!-- Use the category attribute to set the header -->
      <h1><%= category %></h1>
    </div>

    <nav>
      <a href="/">Home</a>
      <a href="/mens">Men's Clothing</a>
      <a href="/womens">Women's Clothing</a>
    </nav>
    
    <h2 class="center">Featured Items</h2>
    <div class="section">
      <!-- Modify the following to make one item card for each element of the items array -->
      <!-- You should use the values from data to dynamically populate the image, item name, cost, and path -->
      <% for (let x = 0; x < items.length; x++) { %>
      <div class="item-card">
        <img src="<%= items[x].imageUrl %>" />
        <h3><%= items[x].name %></h3>
        <p>$<%= items[x].cost %></p>
        <a href="<%= items[x].path %>">More info</a>
      </div>
      <% } %>
    </div>
  </body>
</html>
